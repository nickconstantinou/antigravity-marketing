{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": ["-y", "@glifxyz/glif-mcp-server-playwright"], // Note: Use a verified community package or local install
      "env": {}
    },
    "glif": {
      "command": "npx",
      "args": ["-y", "@glifxyz/glif-mcp-server@latest"],
      "env": {
        "GLIF_API_KEY": "your_glif_api_key_here"
      }
    },
    "replicate": {
      "command": "npx",
      "args": ["-y", "replicate-mcp@latest"],
      "env": {
        "REPLICATE_API_TOKEN": "your_replicate_token_here"
      }
    },
    "exa": {
      "command": "npx",
      "args": ["-y", "exa-mcp-server@latest"],
      "env": {
        "EXA_API_KEY": "your_exa_api_key_here"
      }
    },
    "firecrawl": {
      "command": "npx",
      "args": ["-y", "firecrawl-mcp@latest"],
      "env": {
        "FIRECRAWL_API_KEY": "your_firecrawl_api_key_here"
      }
    }
  }
}
